<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="paulrachwalski.uiuc.datacollectionframework.Activities.ProjectSelectionActivity"
    android:background="@color/background_main">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_logo"/>

    <Button
        android:id="@+id/create_new_project_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_logo"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_rect_button"

        android:text="@string/create_new_project_label"
        android:textColor="@color/button_text"/>

    <Button
        android:id="@+id/open_existing_project_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_new_project_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_rect_button"

        android:text="@string/open_existing_project"
        android:textColor="@color/button_text"/>

</RelativeLayout>
